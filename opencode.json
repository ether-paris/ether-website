{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "next-devtools": {
      "type": "local",
      "command": ["bun", "x", "next-devtools-mcp@latest"],
      "enabled": true,
      "environment": {
        "cwd": "."
      }
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["bun", "x", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "svelte": {
      "type": "remote",
      "url": "https://mcp.svelte.dev/mcp"
    }
  }
}
